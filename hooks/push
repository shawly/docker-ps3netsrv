#!/usr/bin/env bash
#
# Push hook for Docker Automated Build.
#

set -e # Exit immediately if a command exits with a non-zero status.
set -u # Treat unset variables as an error.

echo "ğŸ”µ push"
source hooks/.config

# 1. push all images
IMAGE_NAME="${DOCKER_REPO//index.docker.io\/}"

for tag in ${docker_tags[@]}; do
  if [ ${tag} != ${DOCKER_TAG} ]; then
    for arch in ${verified_build_architectures[@]}; do
      echo "â„¹ï¸ Tagging ${IMAGE_NAME}:${DOCKER_TAG}-${arch} with ${tag}-${arch}"
      echo "â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯"
      echo
      docker tag ${IMAGE_NAME}:${DOCKER_TAG}-${arch} ${IMAGE_NAME}:${tag}-${arch}
    done
  fi
done

echo "â„¹ï¸ Pushing all tags for ${IMAGE_NAME}"
echo "â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯"
echo
docker push --all-tags ${IMAGE_NAME}
docker image ls

# 2. build and push manifest
for tag in ${docker_tags[@]}; do
  manifests=""

  for arch in ${verified_build_architectures[@]}; do
    manifests="${manifests} ${IMAGE_NAME}:${tag}-${arch}"
  done

  echo "â„¹ï¸ Creating manifest ${IMAGE_NAME}:${tag}"
  echo "â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯"
  docker manifest create ${IMAGE_NAME}:${tag} \
                              $manifests
  echo

  echo "â„¹ï¸ Annotating manifest"
  echo "â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯"
  for arch in ${verified_build_architectures[@]}; do
      docker manifest annotate ${IMAGE_NAME}:${tag} \
      ${IMAGE_NAME}:${tag}-${arch} \
      --os linux \
      --arch ${docker_to_manifest_map[${arch}]}
  done

  echo "â„¹ï¸ Inspecting manifest ${IMAGE_NAME}:${tag}-${arch}"
  echo "â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯"
  docker manifest inspect ${IMAGE_NAME}:${tag}-${arch}
  echo

  echo "â„¹ï¸ Pushing manifest ${IMAGE_NAME}:${tag}"
  echo "â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯"
  docker manifest push --purge "${IMAGE_NAME}:${tag}"
  echo
done

echo "â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯"
echo "âœ… push hook terminated successfully."
